#include <stdio.h>
int main() {
    int n, temp;
    int i, j;
    float avgtat = 0, avgwt = 0;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    int bt[n], wt[n], P[n], tat[n];

    printf("Enter burst times:\n");
    for (i = 0; i < n; i++) {
        P[i] = i + 1;
        printf("P%d: ", i + 1);
        scanf("%d", &bt[i]);
    }

    
    for (i = 0; i < n - 1; i++) {
        for (j = 0; j < n - i - 1; j++) {
            if (bt[j] > bt[j + 1]) {
                temp = bt[j];
                bt[j] = bt[j + 1];
                bt[j + 1] = temp;

                temp = P[j];
                P[j] = P[j + 1];
                P[j + 1] = temp;
            }
        }
    }

    wt[0] = 0;
    for (i = 1; i < n; i++) {
        wt[i] = wt[i - 1] + bt[i - 1];
    }

    for (i = 0; i < n; i++) {
        tat[i] = wt[i] + bt[i];
        avgwt += wt[i];
        avgtat += tat[i];
    }

    printf("\nProcess\tBurstTime\tWaitingTime\tTurnAroundTime\n");
    for (i = 0; i < n; i++) {
        printf("P%d\t\t%d\t\t%d\t\t%d\n", P[i], bt[i], wt[i], tat[i]);
    }

    printf("\n\t--- GANTT CHART ---\n\n");
    for (i = 0; i < n; i++) {
        printf("|  P%d  ", P[i]);
    }
    printf("|\n");

    printf("0");
    for (i = 0; i < n; i++) {
        printf("\t%d", wt[i] + bt[i]);
    }

    printf("\n\nAverage Waiting Time: %.2f", avgwt / n);
    printf("\nAverage Turnaround Time: %.2f\n", avgtat / n);

    return 0;
}
