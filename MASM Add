CODE SEGMENT
ASSUME CS:CODE
START:
    MOV CL,00H
    MOV SI,3000H
    MOV AL,[SI]
    INC SI
    MOV AH,[SI]
    INC SI
    MOV BL,[SI]
    INC SI
    MOV BH,[SI]
    ADD AX, BX
    INC SI
    MOV [SI],AL
    INC SI
    MOV [SI],AH
    JC L1
    INC SI
    MOV [SI],CL
    INT 3
L1:
    INC CL
    INC SI
    MOV [SI],CL
    INT 3
CODE ENDS
END START


or

CODE SEGMENT
ASSUME CS:CODE

START:
    MOV SI, 3000H      
    MOV AL, [SI]
    INC SI
    MOV AH, [SI]
    INC SI

    MOV BL, [SI]
    INC SI
    MOV BH, [SI]
    INC SI

    ADD AX, BX

    ; Store result back at 4000H (example)
    MOV DI, 4000H
    MOV [DI], AL
    INC DI
    MOV [DI], AH

    INT 3                ; Debug interrupt
CODE ENDS
END START
